# üèõÔ∏è Nefer E-commerce Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Admin SDK
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY_ID=your-private-key-id

# =============================================================================
# PAYMENT PROVIDERS
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # or live

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# SendGrid
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@nefer-ecommerce.com
SENDGRID_FROM_NAME=Nefer Marketplace

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com

# =============================================================================
# SMS SERVICES
# =============================================================================

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# CLOUD STORAGE
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nefer-uploads

# Google Cloud Storage
GCS_PROJECT_ID=your-gcs-project-id
GCS_BUCKET_NAME=nefer-storage

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# =============================================================================
# SOCIAL LOGIN
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_APPLE_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Currency Exchange
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Image Processing
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# DATABASE (Optional - for analytics)
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nefer_analytics
POSTGRES_USER=nefer
POSTGRES_PASSWORD=nefer_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
NODE_ENV=development  # development, staging, production
FLUTTER_ENV=development

# API Settings
API_BASE_URL=http://localhost:8080
WEB_BASE_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

# Default Admin User
ADMIN_EMAIL=admin@nefer-ecommerce.com
ADMIN_PASSWORD=change-this-password
ADMIN_DISPLAY_NAME=Nefer Administrator

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Features
ENABLE_FLASH_SALES=true
ENABLE_REVIEWS=true
ENABLE_WISHLIST=true
ENABLE_COUPONS=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default Settings
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC

# Supported Languages (comma-separated)
SUPPORTED_LANGUAGES=en,ar

# Supported Currencies (comma-separated)
SUPPORTED_CURRENCIES=USD,EUR,GBP,EGP,SAR,AED

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug
DEBUG=true
VERBOSE_LOGGING=true

# Hot Reload
HOT_RELOAD=true

# Mock Services (for development)
MOCK_PAYMENTS=true
MOCK_SMS=true
MOCK_EMAIL=true

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Container Settings
COMPOSE_PROJECT_NAME=nefer
DOCKER_BUILDKIT=1

# Ports
WEB_PORT=3000
API_PORT=8080
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing maintenance. Please check back soon!"
